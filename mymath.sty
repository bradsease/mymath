%% A collection of useful LaTeX commands for formatting equations
%
% Author: Brad Sease
%

\RequirePackage{amsmath, amsfonts}

%% Notation
\newcommand{\re}[1]{\mathbb{R}^{#1}}
\newcommand{\ident}{\mathbb{I}}
\newcommand{\bs}{\boldsymbol} 
\newcommand{\set}[2]{\left\{ #1 \;\middle|\; #2 \right\}}
\newcommand{\sym}[1]{\mathbb{S}^{#1}}
\newcommand{\spd}[1]{\mathbb{S}^{#1}_{++}}
\newcommand{\sspd}[1]{\mathbb{S}^{#1}_{+}}

%% Element grouping
\newcommand{\p}[1]{\left( #1 \right)} 
\newcommand{\br}[1]{\left[ #1 \right]}
\newcommand{\cb}[1]{\left\{ #1 \right\}}

%% Operators
\newcommand{\rank}[1]{\text{rank}\left[ #1 \right]}
\newcommand{\norm}[1]{\left\| #1 \right\|}
\newcommand{\abs}[1]{\left| #1 \right|}
\newcommand{\dom}{\textbf{dom}\,}
\newcommand{\tr}{\text{tr}}

% Inverse Trig
\newcommand{\atan}{\tan^{-1}}
\newcommand{\asin}{\sin^{-1}}
\newcommand{\acos}{\cos^{-1}}

%% x(t)
\newcommand{\xt}{x\p{t}}
\newcommand{\xdt}{\dot{x}\p{t}}
\newcommand{\xddt}{\ddot{x}\p{t}}

%% Optimal x*(t)
\newcommand{\xo}{x^\ast\p{t}}
\newcommand{\xdo}{\dot{x}^\ast\p{t}}
\newcommand{\xddo}{\ddot{x}^\ast\p{t}}
